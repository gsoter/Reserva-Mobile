<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal|top"
    android:padding="16dp"
    android:theme="@style/Base.Animation.AppCompat.Dialog">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editTextChegada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:gravity="center"
                android:hint="Data de Chegada"
                android:inputType="date"
                android:typeface="monospace" />

            <Button
                android:id="@+id/btnDtChegada"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_date_range_black_24dp"
                android:drawableTint="@color/colorTextPrimary" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editTextSaida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:editable="false"
                android:enabled="false"
                android:gravity="center"
                android:hint="Data de SaÃ­da"
                android:inputType="date"
                android:typeface="monospace" />

            <Button
                android:id="@+id/btnDtSaida"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_date_range_black_24dp"
                android:drawableTint="@color/colorTextPrimary" />

        </TableRow>

    </TableLayout>

</android.support.constraint.ConstraintLayout>