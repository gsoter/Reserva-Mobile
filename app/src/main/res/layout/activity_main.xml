<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scrolView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clipChildren="true"
        android:clipToPadding="true"
        android:scrollbarStyle="insideOverlay"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/layoutVert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#BEFFE57F"
            android:fadeScrollbars="true"
            android:orientation="vertical"
            android:visibility="visible"
            tools:visibility="visible">

            <TextView
                android:id="@+id/txtHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/ic_launcher_background"
                android:foregroundGravity="right"
                android:padding="100dp"
                android:singleLine="true"
                android:text="Bem-Vindo!"
                android:textAlignment="center"
                android:textColor="#FF80AB"
                android:textSize="30sp"
                android:typeface="normal"
                android:visibility="visible"
                app:fontFamily="monospace"
                tools:visibility="visible" />

            <Button
                android:id="@+id/btnPesquisa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/ic_launcher_background"
                android:clickable="false"
                android:padding="100dp"
                android:text="Reservar"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#FF80AB"
                android:textSize="30sp"
                android:typeface="monospace"
                android:visibility="visible" />

            <HorizontalScrollView
                android:id="@+id/scrolView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#FCE99F"
                android:clipChildren="true"
                android:clipToPadding="true"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnApto01"
                        style="@android:style/Widget.DeviceDefault.Light.Button.Borderless.Small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/ic_launcher_background"
                        android:padding="100dp"
                        android:scrollbarAlwaysDrawHorizontalTrack="true"
                        android:scrollHorizontally="true"
                        android:text="Apto 01"
                        android:textColor="#FF80AB"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/btnApto02"
                        style="@android:style/Widget.DeviceDefault.Light.Button.Borderless.Small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/ic_launcher_background"
                        android:padding="100dp"
                        android:scrollbarAlwaysDrawHorizontalTrack="false"
                        android:scrollbarAlwaysDrawVerticalTrack="false"
                        android:text="Apto 02"
                        android:textColor="#FF80AB"
                        android:textSize="18sp" />
                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>